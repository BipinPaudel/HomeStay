<resources>


    <!--base application theme that takes property for below 21-->
    <style name="AppMaterialTheme" parent="SuperMaterialTheme">



    </style>
    <!-- Base application theme. -->
    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Parent theme for all lollipop and prelollipop because theme.appcompat is compatible for all-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/white</item>  <!-- Text color of Toolbar Title -->
        <item name="android:textColorSecondary">@android:color/white</item><!-- Color of Overflow Menu ( 3 dots icon )
                                                                                    and color of Navigation Drawer Icon-->
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/overflowMenuBg</item><!--Background of Overflow Menu-->
        <item name="android:textColorPrimary">@color/grey_800</item><!-- Text color of Overflow Menu items-->
    </style>

    <style name="AppMaterialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
